if(!require(plyr)) install.packages("plyr"); library(plyr)
student6 <- read.csv(file.choose(), stringsAsFactors=F)
cat("Loaded", nrow(student6), "rows\n")
gender_mean <- ddply(student6, "Sex", summarise, GradeAverage=mean(Grade, na.rm=T))
write.table(gender_mean, "gender_mean.txt", sep="\t", row.names=F)
i_students <- subset(student6, grepl("i", Name, ignore.case=T))
write.csv(i_students$Name, "i_students.csv", row.names=F, quote=F)
write.csv(i_students, "i_students_full.csv", row.names=F)
files <- c("gender_mean.txt","i_students.csv","i_students_full.csv")
print(data.frame(File=files, Exists=file.exists(files)))
cat("\nDone. Check your working directory.\n")
